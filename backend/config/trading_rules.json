{
  "risk_management": {
    "max_risk_per_trade": 2.0,
    "max_daily_loss": 6.0,
    "max_weekly_loss": 10.0,
    "position_sizing": {
      "default": 1000,
      "high_confidence": 2000,
      "low_confidence": 500
    }
  },
  "entry_rules": {
    "min_confidence_score": 65,
    "required_confirmations": 2,
    "confirmations": [
      "news_sentiment",
      "volume_spike",
      "technical_indicator",
      "price_action"
    ],
    "blackout_periods": {
      "market_open": 5,
      "market_close": 5,
      "earnings_release": 60
    }
  },
  "exit_rules": {
    "stop_loss": {
      "type": "percentage",
      "value": -5.0,
      "trailing": true,
      "trailing_activation": 3.0
    },
    "take_profit": {
      "targets": [
        {"level": 7.0, "size": 30},
        {"level": 10.0, "size": 40},
        {"level": 15.0, "size": 30}
      ]
    },
    "time_based": {
      "max_holding_period": 5,
      "force_close_at_loss": -3.0
    }
  },
  "signal_generation": {
    "weights": {
      "news_sentiment": 40,
      "technical_analysis": 30,
      "volume_analysis": 20,
      "social_sentiment": 10
    },
    "signal_types": {
      "BUY": {
        "conditions": {
          "news_sentiment": ">= 0.6",
          "volume_ratio": ">= 1.5",
          "rsi": "< 35 or > 65 with positive news",
          "confidence": ">= 65"
        }
      },
      "SELL": {
        "conditions": {
          "profit": ">= 10",
          "loss": "<= -5",
          "news_sentiment": "<= -0.5",
          "confidence": ">= 70"
        }
      },
      "WAIT": {
        "conditions": {
          "confidence": "< 65",
          "unclear_sentiment": true,
          "low_volume": "< 1.2x average"
        }
      }
    }
  },
  "special_situations": {
    "pre_market_gap": {
      "threshold": 5.0,
      "action": "HIGH_PRIORITY_ALERT",
      "requires_news_check": true
    },
    "intraday_spike": {
      "threshold": 10.0,
      "action": "IMMEDIATE_ANALYSIS",
      "check_profit_target": true
    },
    "after_hours_move": {
      "threshold": 7.0,
      "action": "PREPARE_NEXT_DAY_PLAN"
    }
  },
  "trading_hours": {
    "pre_market": {
      "start": "04:00",
      "end": "09:30",
      "timezone": "US/Eastern"
    },
    "regular": {
      "start": "09:30",
      "end": "16:00",
      "timezone": "US/Eastern"
    },
    "after_hours": {
      "start": "16:00",
      "end": "20:00",
      "timezone": "US/Eastern"
    }
  }
}
